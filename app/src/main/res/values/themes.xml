<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QRReader_Writer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="LanguageDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/purple_500</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorSecondary</item>

        <!-- Add more styling attributes as needed -->
    </style>

    <!-- Theme for English -->
    <style name="Base.Theme.Speedo.en" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- No need to override text color, it will use the default -->
    </style>

    <!-- Theme for Polish -->parent="AppTheme">
    <style name="Base.Theme.Speedo.pl" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/orange</item>
        <item name="android:textColorSecondary">@color/orange</item>
        <item name="android:textColor">@color/orange</item>
    </style>

</resources>